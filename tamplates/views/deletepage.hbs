<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Delete Page</title>
  <!-- Bootstrap CSS & icon file-->
    {{>iconImage}}
</head>

<body>
  <div class="container">
    {{>navbar}}
    <div class="row g-3 my-3">
      <div class="col">
        <img class="img img-fluid" src="/img/delete.png" alt="">
        {{!-- /update/{{Roomy._id}}  --}}
      </div>
      <div class="col">
        <form class="row g-3 was-validated" action="/delete/{{Roomy._id}}" method="POST">
          <div class="col-md-6">
            <label for="inputName" class="form-label" >Name </label> 
            <input type="text" disabled class="form-control" name="name" id="inputName" placeholder="Enter Name" value="{{Roomy.name}}" required >
          </div>
          <div class="col-md-6">
            <label for="inputFatherName" class="form-label" >Father Name</label>
            <input type="text" disabled class="form-control" name="fatherName" id="inputFatherName" placeholder="Enter Father ame" value="{{Roomy.fatherName}}" required>
          </div>
          <div class="col-md-6">
            <label for="inputPhone" class="form-label">Phone</label>
            <input type="phone" disabled class="form-control" name="phone" id="inputPhone" placeholder="Phone number.." value="{{Roomy.phone}}" required>
          </div>
          <div class="col-md-6">
            <label for="inputFatherPhone" class="form-label">Father Phone</label>
            <input type="phone" disabled class="form-control" name="fatherPhone" id="inputFatherPhone" placeholder="Father Phone number.." value="{{Roomy.fatherPhone}}" required>
          </div>
          <div class="col-md-4">
            <label for="inputEmail" class="form-label">Email</label>
            <input disabled class="form-control" type="email" name="email" id="inputEmail" placeholder="Enter Email" value="{{Roomy.email}}" required>
          </div>
          <div class="col-md-4">
            <label for="inputPassword" class="form-label">Password</label>
            <input class="form-control" disabled type="password" name="password" id="inputPassword" placeholder="Enter Password" value="{{Roomy.password}}" required>
          </div>
          <div class="col-md-4">
            <label for="inputCpassword" class="form-label">Confirm Password</label>
            <input  disabled class="form-control" type="password" name="cpassword" id="inputCpassword" placeholder="Confirm Password" value="{{Roomy.cpassword}}" required>
          </div>
      <div class="col-md-4">
             <div>
                <label for="inputGender" class="form-label">Gender</label>
             </div>
              {{!-- {{#eq this.Roomy.gender 'Male'}} --}}
            <div class="form-check form-check-inline">
              <label class="form-check-label" for="inlineRadio1">Male</label>
              <input class="form-check-input" disabled type="radio" name="gender" id="male" value="Male" {{{setChecked "Male"}}}  required>
            </div>
             {{!-- {{else}} --}}
            <div class="form-check form-check-inline">
              <label class="form-check-label" for="inlineRadio1">Female</label>
              <input class="form-check-input" type="radio" disabled name="gender" id="female" value="Female"  {{{setChecked "Female"}}} required>
            </div>
           {{!-- {{/eq}} --}}
          </div>
          <div class="col-md-5">
            <div>
              <label for="inputDate" class="form-label">Register Date</label>
            </div>

             <input type="date" disabled name="registerDate" class="form-control" id="inputDate" value="{{Roomy.registerDate}}" required>
          </div>
          <div class="col-md-3">
            <div>
              <label for="inputAge" class="form-label">Age</label>
            </div>
             <input type="number" disabled name="age" class="form-control" id="inputAge" value="{{Roomy.age}}" required>
          </div>

          <div class="col-12">
            <label for="inputAddress2" class="form-label">Address</label>
            <input type="text" disabled class="form-control" name="address" id="inputAddress2" value="{{Roomy.address}}" placeholder="Area Village District" required>
          </div>
          <div class="col-md-6">
            <label for="inputCity" class="form-label">City</label>
            <input type="text" disabled name="city" class="form-control" id="inputCity" value="{{Roomy.city}}" placeholder="City Name" required>
          </div>
          
          <div class="col-md-4">
            <label for="inputState" class="form-label">State</label>
            <select disabled id="inputState" name="state" class="form-select" value="{{Roomy.state}}" >
              <option selected >Maharashtra</option>
              <option>Madhyapradesh</option>
              <option>Uttarpradesh</option>
            </select>
          </div>
          <div class="col-md-2">
            <label for="inputPincode" class="form-label">Pincode</label>
            <input type="text" disabled class="form-control" name="pincode" id="inputPincode" value="{{Roomy.pincode}}" required>
          </div>
          <div class="col-12">
            <button type="submit" class="btn btn-danger">Delete</button>
              <a href="/" class="btn btn-warning my-3"> Back </a>
          </div>
        </form>
      </div>
    </div>
{{>footer}}
  </div>
      
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
     <script  src ="/js/index.js"></script>
     <script type="text/javascript" src="src/app.js"></script>
</body>
</html>